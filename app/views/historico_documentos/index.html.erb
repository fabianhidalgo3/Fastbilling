<title>Historico de Documentos de un Cliente</title>
<div class="panel panel-default" id="panel-titulos">
	<div class="panel-body">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><%= link_to '<i class="mdi mdi-home"></i>'.html_safe, { :action => "index", :controller => :bienvenida }%></span></li>
			<li class="breadcrumb-item">Reparto </li>
			<li class="breadcrumb-item">Gestión de Repartos </li>
			<li class="breadcrumb-item active">Historico de Documentos de un Cliente</li>
		</ol>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading"><b>Buscador</b> <span class="mdi mdi-magnify"></span></div>
	<div class="panel-body">
		<div class="col-md-12">
			<div class="col-md-3">
    		<label >Buscar por:</label>
    		<select class="input form-control input-sm" id="seleccion">
      		<option value="default">Seleccione</option>
					<option value="1">Cliente</option>
    		</select>
  		</div>
  		<div class="col-md-4">
    		<label>Ingrese Nª: </label>
				<input class="form-control input-sm" type="number" id="busqueda">
			</div>
  		<div class="col-md-3">
				<br>
    		<button type="button" class="form-control btn btn-primary btn-sm" onclick="cargar_filtro();"><span class="mdi mdi-magnify" style="color: white"></span> Buscar</button>
 		  </div>
		</div>
	</div>
</div>

<div>
	<%= render 'carga_filtro'%>
</div>

<script type="text/javascript">
	function cargar_filtro() {
	  var seleccion = document.getElementById("seleccion").value;
	  var busqueda = document.getElementById("busqueda").value;
	  $.ajax({
	  	url:"<%=url_for :controller => 'historico_documentos', :action => 'carga_filtro' %>",
	    data:'seleccion=' + encodeURIComponent(seleccion) + "&" +
           'busqueda=' + encodeURIComponent(busqueda),
	    cache:false,
	    success:function (data) {}
	   })
	}
	
	$(function(){
   	$('.pagination a').attr('data-remote', 'true')
	});
</script>
