<%= form_tag({controller: "carga_ordenes_reparto", action: "import"} ,multipart:true) do %>
<div class="row">
		<div class="panel panel-default" id="panel-titulos">
			<div class="panel-body">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><%= link_to '<i class="mdi mdi-home"></i>'.html_safe, { :action => "index", :controller => :bienvenida }%></span></li>
					<li class="breadcrumb-item">Reparto </li>
					<li class="breadcrumb-item">Operaciones</li>
					<li class="breadcrumb-item active">Importar Ordenes de Reparto	</li>
				</ol>
			</div>
		</div>
	</div>
  <div class="row">
		<div class="panel panel-default">
			<div class="panel-body">
					<div class="col-md-3">
							<div class="col-md-6">
									<label>Mes Proceso</label><br>
									<%= select_month(Date.today, use_month_names: %w(Enero Febrero Marzo Abril Mayo Junio Julio Agosto Septiembre Octubre Noviembre Diciembre),  field_name: 'mes') %>
								</div>
								<div class="col-md-6">
									<label>Año Proceso</label><br>
									<%= select_year(Date.today, start_year: 1992, end_year: 2099, field_name: 'año', :class => 'form-control') %>
								</div>
					</div>
					<div class="col-md-6">
						<p>Formato Soportado: <b>CSV </b></p>
						<span class="input-group-btn">
							<span class="btn btn-small btn-success btn-inverse" onclick="$(this).parent().find('input[type=file]').click();">
								<span class="mdi mdi-folder-open" style="color:white" aria-hidden="true"></span>
								Seleccionar archivo</span>
							<%= file_field_tag "file", onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());", style: "display: none;" %>
						</span>
						<br>
						<span class="form-control"></span>
						
						<div class="row">
							<div class="col-md-12">
								<br>
								<%= button_tag( :class => "btn btn-primary pull-right") do %>
								<span class="mdi mdi-content-save" style="color:white" aria-hidden="true"></span>
								Importar
							</div>
							<% end %>
						</div>
			</div>
		</div>
	</div>
    <% end %>

