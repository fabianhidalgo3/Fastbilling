							<th>SC</th>
							<th>GC</th>
							<th>CB</th>
							<th>SM</th>
							<th>VS</th>
							<th>ES</th>
							<th>VR</th>
							<th>CC</th>
							<th>DH</th>
							<th>NA</th>
							<th>CD</th>
						</tr>
					</thead>
					<tbody>
						<% if !@lista.nil?%>
							<% @lista.each do |l| %>
								<tr>
									<td><%= l[0] %></td>
									<td><%= l[1].capitalize %></td>
									<td><%= l[2] %></td>
									<td><b><%= l[3] %></b></td>
									<td><b><%= l[4] %></b></td>
									<td><b><%= l[5] %></b></td>
