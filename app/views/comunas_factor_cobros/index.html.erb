<h3>Vinculaci√≥n de Tarifas</h3>
<hr>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-4"></div>
    <div class="col-md-8">
      <%= link_to new_comunas_factor_cobro_path, class: "btn btn-success btn-sm pull-right" do %>
        <i class="mdi mdi-plus" style="color:white"></i> Vincular
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Tarifa</th>
        <th>Comunas Vinculadas</th>
        <th>Total Comunas</th>
      </tr>
    </thead>
    <tbody>
      <% if !@factor.nil?%>
        <% @factor.each do |l| %>
          <%if l.comuna.count > 0 %>
            <tr>
              <td align="center" style="font-size: 14px"><%= l.nombre %></td>
              <td>
                <% contador =0%>
                <%l.comuna.each do |comuna|%>
                  <b><%=comuna.nombre%></b><br>    
                  <% contador = contador+1%>
                <% end %>
              </td>
              <td style="font-size: 14px"><%= contador %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
