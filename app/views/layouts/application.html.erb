<!DOCTYPE html>
<html>
  <meta charset="utf-8">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <title>Fastbilling</title> -->
    <%= include_gon %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag 'favicon.ico' %>
    <!--ICONS-->
    <!-- <link rel="stylesheet" href="//cdn.materialdesignicons.com/1.9.32/css/materialdesignicons.min.css"> -->
		<!--JS-->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyC1FfEl0KeHwctK2kdxcJ6-1PHyFY2z5z0"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

    <!--FONTS-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Source+Sans+Pro:400,400i,600" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

  </head>
 
  <%if usuario_signed_in? %>
    <body id="fondo">
      <% if current_usuario.perfil_id==1 %>
        <%= render  'layouts/menu_administrador' %>
      <% elsif current_usuario.perfil_id==2 %>
        <%= render 'layouts/menu_gestor_contratos' %>
      <% elsif current_usuario.perfil_id==3 %>
        <%= render 'layouts/menu_gestor_procesos' %>
      <% elsif current_usuario.perfil_id==4 %>
        <%= render 'layouts/menu_analista_lecturas' %>
      <% elsif current_usuario.perfil_id==5 %>
        <%= render 'layouts/menu_analista_gestion' %>
      <% elsif current_usuario.perfil_id==6 || current_usuario.perfil_id==7 %>
        <%= render 'layouts/menu_lector' %>
      <% end %>
      <div class="container">
        <br>
        <br>
        <br>
        <br>
        <%= yield  %>
      </div>
    </body>

  <%else%>
    <%= render 'login' %>
  <% end %>
