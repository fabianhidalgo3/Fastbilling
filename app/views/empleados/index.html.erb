<title>Empleados</title>
<div class="panel panel-default" id="panel-titulos">
		<div class="panel-body">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><%= link_to '<i class="mdi mdi-home"></i>'.html_safe, { :action => "index", :controller => :bienvenida }%></span></li>
				<li class="breadcrumb-item">Mantenedores</li>
	  		<li class="breadcrumb-item active">Empleados</li>
			</ol>
		</div>
	</div>
	<div style="padding-left: 30px;">
			<ul>
				<li><p>Visualiza la lista de empleados y sus  operaciones  <mark>editar</mark> ,  <mark>eliminar</mark> y <mark>Desactivar</mark> </p></li>
			</ul>
	</div><div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<div class="col-md-2">
				<div class="btn-group">
					<button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<span class="mdi mdi-view-grid"></span>	Operaciones <span class="caret"></span>
					</button>
					<ul class="dropdown-menu">
						<li><%= link_to '<i class="mdi mdi-account-plus"></i> Agregar'.html_safe, new_empleado_path %></li>
					</ul>
				</div>
			</div>
		</div>
		<br>
		<div class="table-responsive">
			<table class="table table-striped table-condensed table-hover table-bordered ">
				<thead>
					<tr>
						<th><span class="mdi mdi-settings"></span></th>
						<th>Empleado</th>
						<th>Rut</th>
						<th>Contratista</th>
						<th>Empresa</th>
						<th>Nombre usuario</th>
					</tr>
				</thead>
				<tbody>
					<% @empleados.each do |empleado| %>
						<tr>
							<td>
								<button onclick="" data-toggle="tooltip" data-placement="top" title="Modificar" class="btn btn-default btn-xs" disabled="true">
									<i class="mdi mdi-account-edit mdi-18px"></i>
								</button>
								<button onclick="" data-toggle="tooltip" data-placement="top" title="Eliminar" class="btn btn-primary btn-xs" disabled="true">
									<i class="mdi mdi-account-remove mdi-18px"></i>
								</button>
								<button onclick="" data-toggle="tooltip" data-placement="top" title="Desactivar" class="btn btn-danger btn-xs"  disabled="true" >
									<i class="mdi mdi-account-off mdi-18px"></i>
								</button>
							</td>
							<td><%= empleado.nombre_completo %></td>
							<td><%= empleado.rut %></td>
							<td><%= empleado.contratistum.nombre %></td>
							<td><%= empleado.subempresa.razon_social %></td>
							<% if !empleado.usuario.nil? %>
								<td><%= empleado.usuario.email%></td>
							<%else%>  
								<td></td>
							<%end%>					
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="row">
			<center>
				<%= will_paginate @empleados, renderer: BootstrapPagination::Rails %>
		</center>
		</div>
	</div>
</div>

<script type="text/javascript">
	//tooltip mensajes en los botones
	$(document).ready(function(){
		$('[data-toggle="tooltip"]').tooltip();   
	});
</script>
