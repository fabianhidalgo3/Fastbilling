<title>Efectividad Por Porción</title>
<div class="panel panel-default" id="panel-titulos">
		<div class="panel-body">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><%= link_to '<i class="mdi mdi-home"></i>'.html_safe, { :action => "index", :controller => :bienvenida }%></span></li>
				<li class="breadcrumb-item">Lectura </li>
				<li class="breadcrumb-item">Reportes </li>
	  		<li class="breadcrumb-item active">Llenado de Estanques</li>
			</ol>
		</div>
	</div>
<div class="panel panel-default">
	<div class="panel-heading"><b>Buscador</b> <span class="mdi mdi-magnify"></span></div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-2">
					<label for="">Región</label>
					<%=select_tag "Zona", options_from_collection_for_select(@zonas, "id", "nombre"), :prompt=> "Seleccionar", :class => "form-control input-sm" , :onchange => 'mostrarPorciones()'%>
				</div>
				<div class="col-md-3">
					<label for="">Porción</label>
					<%= render 'porciones' %>
				</div>	
				<div class="col-md-2">
					<br>
					<button type="button" onclick="carga_filtro();" class="btn btn-primary form-control"><span style="color:white" class="mdi mdi-magnify"></span> Buscar</button>			
			</div>
			</div>
		</div>	
	</div>
</div>
<div class="">
	<%= render 'tabla_contenido'%>
</div>

<script type="text/javascript">
  function mostrarTablaContenido() {
     /* Para obtener el valor */
    var cliente = document.getElementById("nro-cliente").value;
    $.ajax({
      url: "<%=url_for :controller => 'reporte_llenado_estanques',:action => 'tabla_contenido' %>",
      data: 'cliente=' + encodeURIComponent(cliente),
      cache: false,
      success: function(data) {}
    })
  }

  function mostrarPorciones() {
   var zona = document.getElementById("Zona").value;
   $.ajax({
     url: "<%=url_for :controller => 'reporte_llenado_estanques',:action => 'porciones' %>",
     data: 'zona=' + encodeURIComponent(zona),
     cache: false,
     success: function(data) {}
   })
 }


</script>
