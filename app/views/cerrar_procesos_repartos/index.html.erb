<title>Cerrar Procesos de Reparto</title>
<div class="panel panel-default" id="panel-titulos">
	<div class="panel-body">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><%= link_to '<i class="mdi mdi-home"></i>'.html_safe, { :action => "index", :controller => :bienvenida }%></span></li>
			<li class="breadcrumb-item">Reparto </li>
			<li class="breadcrumb-item">Operaciones</li>
			<li class="breadcrumb-item active">Cerrar Procesos de Reparto	</li>
		</ol>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading"><b>Buscador</b> <span class="mdi mdi-magnify"></span></div>
	<div class="panel-body">
		<div class="col-md-2">
			<label>Regi√≥n:</label>
			<%=select_tag "Zona", options_from_collection_for_select(@zonas, "id", "codigo_nombre"), :prompt=> "Seleccione", :class => "form-control input-sm"%>
		</div>
		<div class="col-md-2">
			<br>
			<button type="button" onclick="carga_filtro();" class="btn btn-primary form-control"><span style="color:white" class="mdi mdi-magnify"></span> Buscar</button>			
		</div>	
	</div>
</div>
<br>
<div>
	<%= render 'carga_filtro' %>
</div>

<script>
	function carga_filtro(){
		var zona = document.getElementById("Zona").value;		
		$.ajax({
			url: "<%=url_for :controller => 'cerrar_procesos_repartos',:action => 'carga_filtro' %>",
			data: 'zona=' + encodeURIComponent(zona),
			cache: false,
			success: function(data) {}
		})
	}
</script>