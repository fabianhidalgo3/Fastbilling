<title>Cerrar Procesos de Lectura</title>
<div class="panel panel-default" id="panel-titulos">
		<div class="panel-body">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><%= link_to '<i class="mdi mdi-home"></i>'.html_safe, { :action => "index", :controller => :bienvenida }%></span></li>
				<li class="breadcrumb-item">Lectura </li>
				<li class="breadcrumb-item">Operaciones </li>
	  		<li class="breadcrumb-item active">Cerrar Procesos de Lectura</li>
			</ol>
		</div>
	</div>
<div class="panel panel-default">
	<div class="panel-heading"><b>Buscador</b> <span class="mdi mdi-magnify"></span></div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-4">
					<label>Regiones:</label>
					<%=select_tag "Zona", options_from_collection_for_select(@zonas, "id", "codigo_nombre"), :prompt=> "Seleccione", :class => "form-control input-sm"%>
				</div>
				<div class="col-md-1">
					<br>
					<button type="button" onclick="carga_filtro();" class="btn btn-default form-control"><span class="mdi mdi-magnify"></span></button>			
				</div>
			</div>
		</div>
	</div>
</div>
<br>
<div>
	<%= render 'carga_filtro' %>
</div>

<script>
	function carga_filtro(){
		var zona = document.getElementById("Zona").value;		
		$.ajax({
			url: "<%=url_for :controller => 'cerrar_procesos_lecturas',:action => 'carga_filtro' %>",
			data: 'zona=' + encodeURIComponent(zona),
			cache: false,
			success: function(data) {}
		})
	}
</script>